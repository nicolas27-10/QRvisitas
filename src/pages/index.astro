	.card {
		max-width: 720px;
		width: 100%;
		background: #D0102B;
		border-radius: 20px;
		box-shadow: 0 8px 40px rgba(0,0,0,0.3);
		padding: 2rem;
		text-align: center;
		border: 3px solid #ffffff;
		position: relative;
	}

	.event-logo {
		margin-bottom: 1.5rem;
	}

	.main-title {
		margin: 0;
		display: flex;
		flex-direction: column;
		align-items: center;
		gap: 0.5rem;
	}

	.rap-text {
		font-size: 3.5rem;
		font-weight: 900;
		color: #000000;
		text-shadow: 3px 3px 0 #ffffff;
		letter-spacing: 0.1em;
		position: relative;
	}

	.rap-text::after {
		content: "★";
		position: absolute;
		top: -0.2em;
		right: -0.3em;
		font-size: 0.8em;
		color: #ffffff;
	}

	.estadio-text {
		font-size: 1.6rem;
		font-weight: 600;
		color: #ffffff;
		text-shadow: 2px 2px 0 #000000;
		font-style: italic;
		letter-spacing: 0.05em;
	}

	.event-date {
		font-size: 1.2rem;
		font-weight: bold;
		color: #ffffff;
		margin-top: 0.5rem;
		text-shadow: 1px 1px 0 #000000;
	}

	h2 {
		margin: 0.25rem 0 0.5rem;
		font-size: 1.9rem;
		color: #ffffff;
		text-shadow: 1px 1px 0 #000000;
	}

	p { 
		margin: 0.25rem 0; 
		font-size: 1.05rem; 
		color: #ffffff;
		text-shadow: 1px 1px 0 #000000;
	}

	strong { 
		font-weight: 700; 
		color: #ffffff;
	}

	.note { 
		color: #ffffff; 
		font-size: 0.95rem; 
		margin-top: 0.75rem; 
		opacity: 0.9;
	}

	.footer { 
		text-align: center; 
		margin-top: 1rem; 
		color: #ffffff; 
		font-size: 0.9rem; 
		text-shadow: 1px 1px 0 #000000;
	}

	@media (max-width: 768px) {
		.page {
			padding: 1rem;
		}

		.card {
			padding: 1.5rem;
		}

		.rap-text {
			font-size: 2.8rem;
		}

		.estadio-text {
			font-size: 1.3rem;
		}

		h2 {
			font-size: 1.6rem;
		}

		p {
			font-size: 1rem;
		}
	}
