---
import Layout from '../layouts/Layout.astro';

---


<Layout title="Visita autorizada - RAP AL ESTADIO">
	<main class="page">
		<section class="card">
			<!-- Logo del evento -->
			<div class="event-logo">
				<h1 class="main-title">
					<span class="rap-text">RAP</span>
					<span class="estadio-text">AL ESTADIO</span>
				</h1>
				<div class="event-date">04-10-25</div>
			</div>
			
			<h2>Visita autorizada</h2>
			<p>
				<strong>Visita autorizada por residente</strong> de la <strong>Junta de Vecinos Nro. 17 La Florida</strong>.
			</p>
			<p>
				Válido solo el <strong>04 de Octubre de 2025</strong>.
			</p>
			<p class="note">Muestre este comprobante junto a su identificación al ser requerido.</p>
		</section>

		<footer class="footer">
			<p>RAP AL ESTADIO · La Florida · 2025</p>
			<p>Junta de Vecinos Nro. 17 La Florida</p>
		</footer>
	</main>
</Layout>

